<p id="notice"><%= notice %></p>

<h1>コメント一覧</h1>

<table>
  <thead>
    <tr>
      <th>Board</th>
      <th>Content</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.board_id %></td>
        <td><%= comment.content %></td>
        <td><%= link_to '表示', comment %></td>
        <td><%= link_to '編集', edit_comment_path(comment) %></td>
        <td><%= link_to '削除', comment, method: :delete, data: { confirm: '削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規コメント作成', new_comment_path %>
